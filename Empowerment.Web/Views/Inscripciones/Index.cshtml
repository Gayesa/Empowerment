@model IEnumerable<Empowerment.Web.Data.Entities.Inscripcion>

@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<br />
<p>
    <a asp-action="Create" class="btn btn-negro"><i class="glyphicon glyphicon-plus"></i> Crear Inscripción</a>
</p>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-empowermentRojo">
            <div class="panel-heading">
                <h3 class="panel-title tituloContenedor">Listado Usuarios </h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Vigencia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FechaInicio)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FechaFin)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Renovacion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Efectivo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Tarjeta)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Deuda)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Vigencia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaInicio)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaFin)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Renovacion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Efectivo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tarjeta)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Deuda)
                                </td>
                                <td>
                                    <a asp-action="Edit" class="btn btn-default" asp-route-id="@item.Id"><i class="glyphicon glyphicon-pencil"></i> </a>
                                    <a asp-action="Details" class="btn btn-default" asp-route-id="@item.Id"><i class="glyphicon glyphicon-list"> </i> </a>
                                    <button data-id="@item.Id" class="btn btn-danger deleteItem" data-toggle="modal" data-target="#deleteDialog"><i class="glyphicon glyphicon-trash"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<!-- Tabla  -->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();

            // Delete item
            var item_to_delete;

            $('.deleteItem').click((e) => {
                item_to_delete = e.currentTarget.dataset.id;
            });

            $("#btnYesDelete").click(function () {
                window.location.href = '/Inscripciones/Delete/' + item_to_delete;
            });
        });
    </script>
}

